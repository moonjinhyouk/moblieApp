<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout">

    <ImageView
        android:id="@+id/clothingImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_boy" />

    <Button
        android:id="@+id/colorButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clothingImageView"
        android:text="Color 1" />

    <Button
        android:id="@+id/colorButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorButton1"
        android:text="Color 2" />

    <Button
        android:id="@+id/colorButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorButton2"
        android:text="Color 3" />

    <Button
        android:id="@+id/colorButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorButton3"
        android:text="Color 4" />

    <Button
        android:id="@+id/colorButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorButton4"
        android:text="Color 5" />

</RelativeLayout>
